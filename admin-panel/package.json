{
  "name": "turkish-learning-admin",
  "version": "1.0.0",
  "description": "Admin panel for Turkish Learning App",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "start": "next start -p 3003",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "node scripts/run-performance-tests.js",
    "test:load": "k6 run tests/performance/load-testing.js",
    "test:security": "jest tests/security && node scripts/security-scan.js",
    "security:scan": "node scripts/security-scan.js",
    "security:audit": "npm audit && npm audit fix",
    "test:all": "npm run test && npm run test:e2e && npm run test:performance && npm run test:security",
    "health": "node healthcheck.js",
    "deploy:local": "bash scripts/deploy.sh local",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "sync:setup": "./scripts/setup-ssh.sh",
    "sync:deploy": "source .env.deploy 2>/dev/null || true && ./scripts/deploy-to-vps.sh",
    "sync:watch": "source .env.deploy 2>/dev/null || true && ./scripts/watch-and-deploy.sh",
    "webhook:start": "node webhook-server.js",
    "webhook:pm2": "pm2 start webhook-server.js --name turkish-webhook",
    "docker:build": "docker build -t turkish-learning/admin-panel .",
    "docker:run": "docker run -p 3001:3001 turkish-learning/admin-panel",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "ci:install": "npm ci",
    "ci:build": "npm run build",
    "ci:test": "npm run test:all"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@hookform/resolvers": "^3.10.0",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-table": "^8.10.0",
    "@types/js-cookie": "^3.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "axios": "^1.6.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.18.0",
    "js-cookie": "^3.0.0",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.59.0",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^9.0.0",
    "react-select": "^5.8.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-virtualized-auto-sizer": "^1.0.0",
    "react-window": "^1.8.0",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query-devtools": "^5.81.5",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^13.4.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^0.15.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lighthouse": "^10.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
