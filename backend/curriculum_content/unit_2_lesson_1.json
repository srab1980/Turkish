              "participants": [
                {
                  "name": "Zeynep",
                  "role": "Turkish university student",
                  "avatar": "/images/avatars/zeynep.jpg"
                },
                {
                  "name": "Alex",
                  "role": "Exchange student",
                  "avatar": "/images/avatars/alex.jpg"
