              ],
              "lines": [
                {
                  "speaker": "Zeynep",
                  "text": "Merhaba! Sen yeni öğrenci misin?",
                  "translation": "Hello! Are you a new student?",
                  "audioUrl": "/audio/dialogue-2-1-line1.mp3",
                  "notes": "Polite way to ask if someone is new"
                },
                {
                  "speaker": "Alex",
                  "text": "Evet, ben Alex. Türkçe öğreniyorum.",
                  "translation": "Yes, I'm Alex. I'm learning Turkish.",
                  "audioUrl": "/audio/dialogue-2-1-line2.mp3",
                  "notes": "Self-introduction and stating purpose"
                },
                {
                  "speaker": "Zeynep",
                  "text": "Çok güzel! Kütüphane nerede biliyor musun?",
                  "translation": "Very nice! Do you know where the library is?",
                  "audioUrl": "/audio/dialogue-2-1-line3.mp3",
                  "notes": "Asking about location"
                },
                {
                  "speaker": "Alex",
                  "text": "Hayır, bilmiyorum. Kütüphane büyük mü?",
                  "translation": "No, I don't know. Is the library big?",
                  "audioUrl": "/audio/dialogue-2-1-line4.mp3",
                  "notes": "Admitting lack of knowledge and asking for information"
                },
                {
                  "speaker": "Zeynep",
                  "text": "Evet, çok büyük. İkinci katta var.",
                  "translation": "Yes, very big. It's on the second floor.",
                  "audioUrl": "/audio/dialogue-2-1-line5.mp3",
                  "notes": "Providing information about location"
                }
              ],
              "audioUrl": "/audio/dialogue-2-1-complete.mp3"
