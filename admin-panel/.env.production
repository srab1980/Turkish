# Turkish Learning Platform - Production Environment Configuration
# WARNING: This file contains sensitive configuration. Never commit actual secrets to version control.

# Application Configuration
NODE_ENV=production
PORT=3001
NEXT_TELEMETRY_DISABLED=1

# URLs and Domains
API_BASE_URL=https://api.turkishlearning.com
WEB_BASE_URL=https://turkishlearning.com
ADMIN_BASE_URL=https://admin.turkishlearning.com

# Database Configuration
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=turkish_learning
DB_USERNAME=admin
DB_PASSWORD=REPLACE_WITH_ACTUAL_PASSWORD
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=REPLACE_WITH_ACTUAL_PASSWORD
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

# Authentication & Security
JWT_SECRET=REPLACE_WITH_ACTUAL_JWT_SECRET_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_ACTUAL_REFRESH_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

SESSION_SECRET=REPLACE_WITH_ACTUAL_SESSION_SECRET_AT_LEAST_32_CHARS
SESSION_MAX_AGE=86400000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Encryption
ENCRYPTION_KEY=REPLACE_WITH_ACTUAL_ENCRYPTION_KEY_32_CHARS

# CORS Configuration
CORS_ORIGIN=https://turkishlearning.com,https://admin.turkishlearning.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,mp3,mp4,jpg,jpeg,png,gif
UPLOAD_PATH=/app/uploads
STATIC_FILES_URL=https://cdn.turkishlearning.com

# External Services
OPENAI_API_KEY=REPLACE_WITH_ACTUAL_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google Services
GOOGLE_CLIENT_ID=REPLACE_WITH_ACTUAL_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_ACTUAL_GOOGLE_CLIENT_SECRET

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=REPLACE_WITH_ACTUAL_SMTP_USERNAME
SMTP_PASSWORD=REPLACE_WITH_ACTUAL_SMTP_PASSWORD
EMAIL_FROM=noreply@turkishlearning.com

# AI Service Configuration
AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_TIMEOUT=30000
AI_SERVICE_API_KEY=REPLACE_WITH_ACTUAL_AI_SERVICE_API_KEY

# Monitoring and Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Sentry Configuration
SENTRY_DSN=REPLACE_WITH_ACTUAL_SENTRY_DSN
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Metrics and Analytics
METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_SPEECH_RECOGNITION=false
ENABLE_SOCIAL_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_VOICE_RECOGNITION=false

# Performance Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
API_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=10000

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
TRUST_PROXY=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_FONT_SRC='self' data:
CSP_CONNECT_SRC='self' https:
CSP_MEDIA_SRC='self' https:

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=turkish-learning-backups
BACKUP_S3_REGION=us-east-1

# Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=3
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=The system is currently under maintenance. Please try again later.

# API Versioning
API_VERSION=v1
API_PREFIX=/api/v1

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,tr,es,fr,de

# Time Zone
DEFAULT_TIMEZONE=UTC
DISPLAY_TIMEZONE=Europe/Istanbul

# Development Tools (disabled in production)
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_API_DOCS=false
ENABLE_DEBUG_MODE=false
