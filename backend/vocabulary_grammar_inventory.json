  "grammar_inventory": {
    "unit_1": {
      "topics": [
        {
          "name": "Turkish Alphabet",
          "description": "29 letters in Turkish alphabet",
          "examples": ["A a", "B b", "C c", "Ç ç", "D d", "E e", "F f", "G g", "Ğ ğ", "H h", "I ı", "İ i", "J j", "K k", "L l", "M m", "N n", "O o", "Ö ö", "P p", "R r", "S s", "Ş ş", "T t", "U u", "Ü ü", "V v", "Y y", "Z z"],
          "exercises": ["Letter recognition", "Pronunciation practice", "Writing practice"]
        },
        {
          "name": "Demonstratives (Bu-Şu-O)",
          "description": "This, that (near), that (far)",
          "examples": [
            "Bu kalem. (This is a pen.)",
            "Şu masa. (That table.)",
            "O kitap. (That book.)"
          ],
          "exercises": ["Pointing exercises", "Object identification", "Distance practice"]
        },
        {
          "name": "Question Words (Kim-Ne)",
          "description": "Who and What questions",
          "examples": [
            "O kim? (Who is that?)",
            "Bu ne? (What is this?)",
            "Kim öğretmen? (Who is the teacher?)"
          ],
          "exercises": ["Question formation", "Answer practice", "Dialogue creation"]
        },
        {
          "name": "Plural Suffix (-lAr)",
          "description": "Making nouns plural",
          "examples": [
            "kitap → kitaplar (book → books)",
            "masa → masalar (table → tables)",
            "öğrenci → öğrenciler (student → students)"
          ],
          "exercises": ["Plural formation", "Vowel harmony practice", "Exception rules"]
        },
        {
          "name": "Question Particle (mI)",
          "description": "Yes/no questions",
          "examples": [
            "Bu kitap mı? (Is this a book?)",
            "O öğretmen mi? (Is he/she a teacher?)",
            "Siz öğrenci misiniz? (Are you a student?)"
          ],
          "exercises": ["Question formation", "Vowel harmony", "Answer practice"]
        }
      ]
    },
    "unit_2": {
      "topics": [
        {
          "name": "Locative Case (-DA)",
          "description": "Expressing location (in, at, on)",
          "examples": [
            "okulda (at school)",
            "evde (at home)",
            "sınıfta (in the classroom)",
            "parkta (in the park)"
          ],
          "exercises": ["Case suffix practice", "Voicing rules", "Location descriptions"]
        },
        {
          "name": "Existence (Var/Yok)",
          "description": "There is/There isn't",
          "examples": [
            "Sınıfta öğrenci var. (There are students in the classroom.)",
            "Masada kitap yok. (There is no book on the table.)",
            "Okulda kantin var mı? (Is there a cafeteria at school?)"
          ],
          "exercises": ["Existence statements", "Negative forms", "Question forms"]
        },
        {
          "name": "Numbers (1-100)",
          "description": "Cardinal and ordinal numbers",
          "examples": [
            "bir, iki, üç... (one, two, three...)",
            "birinci, ikinci, üçüncü... (first, second, third...)",
            "on beş (fifteen)", "yirmi (twenty)", "yüz (hundred)"
          ],
          "exercises": ["Number recognition", "Counting practice", "Ordinal formation"]
        },
        {
          "name": "Nominal Sentences",
          "description": "Sentences without verbs",
          "examples": [
            "Ben öğrenciyim. (I am a student.)",
            "O doktor. (He/She is a doctor.)",
            "Biz Türküz. (We are Turkish.)"
          ],
          "exercises": ["Identity statements", "Nationality expressions", "Profession descriptions"]
        }
      ]
    },
    "unit_3": {
      "topics": [
        {
          "name": "Present Tense (-Iyor)",
          "description": "Ongoing actions in present",
          "examples": [
            "Ben kitap okuyorum. (I am reading a book.)",
            "O müzik dinliyor. (He/She is listening to music.)",
            "Biz çalışıyoruz. (We are working.)"
          ],
          "exercises": ["Verb conjugation", "Vowel harmony", "Tense usage"]
        },
        {
          "name": "Dative Case (-(y)A)",
          "description": "Direction, indirect object",
          "examples": [
            "okula gitmek (to go to school)",
            "eve gelmek (to come home)",
            "arkadaşa mektup yazmak (to write a letter to a friend)"
          ],
          "exercises": ["Direction expressions", "Indirect objects", "Movement verbs"]
        },
        {
          "name": "Ablative Case (-DAn)",
          "description": "From, out of, source",
          "examples": [
            "okuldan gelmek (to come from school)",
            "evden çıkmak (to leave home)",
            "marketten alışveriş yapmak (to shop from the market)"
          ],
          "exercises": ["Source expressions", "Movement from", "Origin descriptions"]
        },
        {
          "name": "Want/Desire (-mAk istemek)",
          "description": "Expressing wants and desires",
          "examples": [
            "Kitap okumak istiyorum. (I want to read a book.)",
            "Film izlemek istiyor. (He/She wants to watch a movie.)",
            "Spor yapmak istiyoruz. (We want to do sports.)"
          ],
          "exercises": ["Desire expressions", "Infinitive forms", "Want statements"]
        }
      ]
    }
  },
  "pronunciation_guide": {
